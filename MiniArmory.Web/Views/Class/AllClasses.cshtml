@using MiniArmory.Core.Models.Class
@model List<ClassViewModel>

@{
    ViewData["Title"] = "All Spells";
}

<div class="row">
    <div class="form-group">
        @foreach (var classM in Model)
        {
            if (this.User.IsInRole("Owner"))
            {
                <a asp-action="AddSpells" asp-controller="Class" asp-route-id="@classM.Id">
                    <div class="card d-inline-flex bg-dark text-white" style="width: 18rem; border: 4px solid #808080">
                        <div class="row">
                            <div class="col-md-7">
                                <img src="@classM.Image" alt="Class image" style="width: 5rem; border: 1px solid #808080">
                            </div>

                            <div class="col-md-5">
                                <p>@classM.Name</p>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text">@classM.Description</p>
                        </div>

                        <div class="row">
                            <div class="col-md-7">
                                <img src="@classM.SpecialisationImage" alt="Specialisation image" style="width: 5rem;">
                            </div>

                            <div class="card-body">
                                <p class="card-text">@classM.SpecialisationDescription</p>
                            </div>
                        </div>
                    </div>
                </a>
            }
            else
            {
                <div class="card d-inline-flex bg-dark text-white" style="width: 18rem; border: 4px solid #808080">
                        <div class="row">
                            <div class="col-md-7">
                                <img src="@classM.Image" alt="Class image" style="width: 5rem; border: 1px solid #808080">
                            </div>

                            <div class="col-md-5">
                                <p>@classM.Name</p>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text">@classM.Description</p>
                        </div>

                        <div class="row">
                            <div class="col-md-7">
                                <img src="@classM.SpecialisationImage" alt="Specialisation image" style="width: 5rem;">
                            </div>

                            <div class="card-body">
                                <p class="card-text">@classM.SpecialisationDescription</p>
                            </div>
                        </div>
                    </div>
            }
        }
    </div>
</div>
