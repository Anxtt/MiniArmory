@using MiniArmory.Core.Models.Class
@model List<ClassViewModel>

@{
    ViewData["Title"] = "All Classes";
}

<div class="form-group">
    @foreach (var classM in Model)
    {
        <a asp-action="Details" asp-controller="Class" asp-route-id="@classM.Id">
            <div class="card d-inline-flex bg-dark text-white m-2" style="width: 18rem; height: 45rem; border: 4px solid #808080">
                <div class="row">
                    <div class="col-md-7">
                        <img src="@classM.ClassImage" alt="Class image" style="width: 5rem; border: 1px solid #808080">
                    </div>

                    <div class="col-md-5 ps-3">
                        <p>@classM.Name</p>
                    </div>
                </div>

                <div class="card-body">
                    <p class="card-text" style="text-align: justify">@classM.Description</p>
                </div>

                <div class="row">
                    <div class="col-md-7">
                        <img src="@classM.SpecialisationImage" alt="Specialisation image" style="width: 5rem;">
                    </div>

                    <div class="card-body">
                        <p class="card-text" style="text-align: justify">@classM.SpecialisationDescription</p>
                    </div>
                </div>
            </div>
        </a>
    }
</div>