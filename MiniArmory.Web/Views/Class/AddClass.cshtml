@using MiniArmory.Core.Models.Class
@model ClassFormModel

@{
    ViewData["Title"] = "Add Class";
}

<h1 class="text-light text-center">Class creation</h1>

<h4 class="text-light text-center">Class characteristics</h4>
<hr />
<div>
    <div class="align-content-center">
        <form asp-action="AddClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="ClassImage" class="control-label"></label>
                <input asp-for="ClassImage" class="form-control" />
                <span asp-validation-for="ClassImage" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="SpecialisationName" class="control-label"></label>
                <input asp-for="SpecialisationName" class="form-control" />
                <span asp-validation-for="SpecialisationName" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="SpecialisationDescription" class="control-label"></label>
                <input asp-for="SpecialisationDescription" class="form-control" />
                <span asp-validation-for="SpecialisationDescription" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-2 offset-md-4 text-light">
                <label asp-for="SpecialisationImage" class="control-label"></label>
                <input asp-for="SpecialisationImage" class="form-control" />
                <span asp-validation-for="SpecialisationImage" class="text-danger"></span>
            </div>
            <div class="form-group col-4 offset-md-4 text-center text-light">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
