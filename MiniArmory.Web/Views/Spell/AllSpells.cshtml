@using MiniArmory.Core.Models
@model List<SpellViewModel>

@{
    ViewData["Title"] = "All Spells";
}

<div class="row">
    <div class="form-group">
        @foreach (var spell in Model)
        {
            <div class="card d-inline-flex bg-dark text-white" style="width: 18rem; border: 4px solid #808080">
                <div class="row">
                    <div class="col-md-7">
                        <img src="@spell.Tooltip" alt="Spell tooltip" style="width: 5rem; border: 1px solid #808080">
                    </div>

                    <div class="col-md-5">
                        <p>@spell.Name</p>
                    </div>
                </div>

                <div class="card-body">
                    <p class="card-text">@spell.Description</p>
                </div>
            </div>
        }
    </div>
</div>
