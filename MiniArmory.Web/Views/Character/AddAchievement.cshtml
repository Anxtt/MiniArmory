@using MiniArmory.Core.Models.Character
@model AchievementCharacterViewModel

@{
    ViewData["Title"] = "Add achievements to character";
}


<div class="row d-inline-flex ">
    <div class="col-5 d-inline-block p-2">
        <img src="@Model.Character.FactionImage" style="width: 6rem; height: 6rem;" class="d-inline-flex" />
        <a asp-action="Details" asp-controller="Character" asp-route-id="@Model.Character.Id" class="d-inline-flex p-2 text-decoration-none">
            @if (@Model.Character.FactionName == "Alliance")
            {
                <h3 class="text-primary">@Model.Character.Name</h3>
            }
            else
            {
                <h3 class="text-warning">@Model.Character.Name</h3>
            }
        </a>
        <img src="@Model.Character.Image" style="width: 28rem; height: 28rem;" class="p-2" />
    </div>

    <div class="col-7 d-inline-block p-2" style="width: 47rem">
        @foreach (var achie in Model.Achievements)
        {
            <form class="d-inline-block row-6" asp-action="AddAchievement" asp-controller="Character" asp-route-id="@Model.Character.Id" asp-route-achievement="@achie.Name">
                <div class="text-center">
                    <p style="width: 13rem;" class="text-center m-3">@achie.Name</p>

                    <img src="@achie.Image" class="p-1" style="width: 15rem; height: 15rem;" />
                </div>
                <div class="text-center">
                    <input class="btn-outline-dark" type="submit" formmethod="post" value="Take your chance">
                </div>
            </form>
        }
    </div>
</div>