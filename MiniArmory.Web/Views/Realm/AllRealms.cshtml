@using MiniArmory.Core.Models.Realm
@model List<RealmViewModel>

@{
    ViewData["Title"] = "All Realms";
}

<div class="card-body table-responsive col-8 offset-2">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th class="text-light text-center">Name</th>
                <th class="text-light text-center">Language</th>
                <th class="text-light text-center">Population</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var realm in Model
            .OrderBy(x => x.Language)
            .ThenBy(x => x.Population))
            {
                <tr>
                    <td class="text-light text-center">@realm.Name</td>
                    <td class="text-light text-center">@realm.Language</td>
                    <td class="text-light text-center">@realm.Population</td>
                </tr>
            }
        </tbody>
    </table>
</div>