@using MiniArmory.Core.Models.Realm
@model RealmFormModel

@{
    ViewData["Title"] = "Add Realm";
}

<h1 class="text-center text-light">Realm creation</h1>

<h4 class="text-center text-light">Realm characteristics</h4>
<hr />
<div>
    <div class="align-content-center">
        <form asp-action="AddRealm">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-2 offset-md-4 text-light">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group col-4 text-center offset-md-4 text-light">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
