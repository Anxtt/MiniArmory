@using MiniArmory.Core.Models.Achievement
@model AchievementFormModel

@{
    ViewData["Title"] = "Add Achievement";
}

<h1 class="text-light text-center">Achievement creation</h1>

<h4 class="text-light text-center">Achievement characteristics</h4>
<hr />
<div>
    <div class="align-content-center">
        <form asp-action="AddAchievement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Points" class="control-label"></label>
                <input asp-for="Points" class="form-control" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-1 offset-md-4 text-light">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group col-4 mb-2 offset-md-4 text-light">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group col-4 offset-md-4 text-light text-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
