@using MiniArmory.Core.Models
@model UserViewModel

@{
    ViewData["Title"] = "Welcome User!";
}

<div>
    <div class="align-content-center">
        <form asp-action="WelcomeUser" method="post">
            <div class="form-group col-4 mb-1 offset-md-4 text-dark">
                <label asp-for="Name" class="control-label text-dark"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-4 offset-md-4 text-center text-light">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}