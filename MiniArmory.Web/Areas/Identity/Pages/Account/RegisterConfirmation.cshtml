@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1 class="text-light pt-3 text-center">@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p class="text-light pt-2 text-center">Confirm: <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="text-decoration-none text-success">Click here to confirm your account</a>
</p>
    }
    else
    {
<p class="text-light">
        Please check your email to confirm your account.
</p>
    }
}

